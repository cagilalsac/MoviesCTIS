@model GenreModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Genre Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Genre</h4>
    <hr />
    <dl class="row">
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.MoviesCountOutput)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.MoviesCountOutput)
        </dd>
        @if (Model.MoviesCountOutput > 0)
        {
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.MoviesOutput)
            </dt>
            <dd class="col-10">
                @Html.Raw(Model.MoviesOutput)
            </dd>
        }
    </dl>
</div>
<div>
    @if (User.IsInRole("User"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>@:&nbsp;|&nbsp;
    }
    <a asp-action="Index">Back to List</a>
</div>



