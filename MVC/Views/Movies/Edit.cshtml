@model MovieModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Edit Movie";
}

<h1>@ViewData["Title"]</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Edit">
		@Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="Year" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Year" class="form-control" />
					<span asp-validation-for="Year" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="Revenue" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Revenue" class="form-control" />
					<span asp-validation-for="Revenue" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="DirectorId" class="col-2 col-form-label"></label>
				<div class="col-5">
					<select asp-for="DirectorId" class="form-select select2" asp-items="ViewBag.DirectorId">
						<option value="">-- Select --</option>
					</select>
					<span asp-validation-for="DirectorId" class="text-danger"></span>
				</div>
            </div>
			<div class="row mb-3">
				<label asp-for="GenreIdsInput" class="col-2 col-form-label"></label>
				<div class="col-5">
					<select multiple asp-for="GenreIdsInput" class="form-select select2" asp-items="ViewBag.Genres">
					</select>
					<span asp-validation-for="GenreIdsInput" class="text-danger"></span>
				</div>
			</div>
            <input type="hidden" asp-for="Id" />
            <div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Save" class="btn btn-primary" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Reset</button>
					&nbsp;&nbsp;
					<a asp-action="Index">Back to List</a>
				</div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
	<link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
	<script src="~/lib/select2/js/select2.min.js"></script>

	<script>
		$(function () {
			$(".select2").select2();
		});
	</script>
}


