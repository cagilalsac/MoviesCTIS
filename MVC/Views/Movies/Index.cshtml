@model IEnumerable<MovieModel>
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Movies";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Message"] is not null)
{
    <p class="bg-warning text-black">@TempData["Message"]</p>
}

@if (User.IsInRole("User"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

@{
    int count = Model is not null ? Model.Count() : 0;
    string countMessage = count == 0 ? "No movies found." : count + " " + (count == 1 ? "movie" : "movies") + " found.";
}
<p class="bg-info text-black">@countMessage</p>

@if (count > 0)
{
    <table id="datatable" class="display" style="width:100%;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RevenueOutput)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DirectorOutput)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RevenueOutput)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DirectorOutput)
                    </td>
                    <td class="text-end">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                            @if (User.IsInRole("User"))
                            {
                                @:&nbsp;|&nbsp;
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                @:&nbsp;|&nbsp;
                                <a href="#" onclick="deleteMovie(@item.Id);">Delete</a>
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <link href="~/lib/datatables/css/jquery.datatables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.datatables.min.js"></script>

    <link href="~/lib/alertifyjs/css/alertify.min.css" rel="stylesheet" />
    <script src="~/lib/alertifyjs/alertify.min.js"></script>

    <script>
        $(function () {
            $("#datatable").DataTable();
        });

        function deleteMovie(id) {
            alertify.confirm(
                "Warning!",
                "Are you sure you want to delete this movie?",
                function () { // Yes
                    window.location.href = "/Movies/Delete/" + id;
                },
                function () { // No
                    
                }
            ).set("labels", { ok: "Yes", cancel: "No" });
        }
    </script>
}
