@model RoleModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Role Details";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Message"] is not null)
{
    <p class="bg-warning text-black">@TempData["Message"]</p>
}

<div>
    <h4>Role</h4>
    <hr />
    <dl class="row">
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        @if (Model.UsersOutput.Any())
        {
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.UsersOutput)
            </dt>
            <dd class="col-10">
                <ol class="list-group list-group-numbered">
                    @{
                        string users;
                        foreach (var user in Model.UsersOutput)
                        {
                            users = $"{user.UserName} ({user.IsActiveOutput})";
                            <li class="list-group-item">@users</li>
                        }
                    }
                </ol>
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>&nbsp;|&nbsp;
    <a asp-action="Index">Back to List</a>
</div>



